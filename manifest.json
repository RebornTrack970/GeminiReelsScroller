{
  "manifest_version": 3,
  "name": "Gemini ADHD Trigger",
  "version": "3.2",
  "description": "Opens your favorite distraction while AI thinks (AI Studio, Gemini, ChatGPT).",
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "https://aistudio.google.com/*",
    "https://gemini.google.com/*",
    "https://chatgpt.com/*",
    "https://www.instagram.com/*",
    "https://www.tiktok.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://aistudio.google.com/*", 
        "https://gemini.google.com/*", 
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
