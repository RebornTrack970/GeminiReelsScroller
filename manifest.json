{
  "manifest_version": 3,
  "name": "ADHD-Pro-Plus",
  "version": "1.0",
  "description": "Opens Reels while Gemini thinks, returns when done.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://aistudio.google.com/*",
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content.js"]
    }
  ]
}